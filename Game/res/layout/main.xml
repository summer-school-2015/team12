<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <Button
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="New Game"
            android:onClick="onClick"
            android:id="@+id/button" android:layout_gravity="center_horizontal" android:layout_marginTop="200dp"
            android:textSize="30dp" android:background="@android:color/black" android:textColor="@android:color/white"/>
    <Button
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="Exit"
            android:id="@+id/button2" android:layout_gravity="center_horizontal" android:background="@android:color/black"
            android:textColor="#ffff1414" android:textSize="@android:dimen/app_icon_size"/>
</LinearLayout>